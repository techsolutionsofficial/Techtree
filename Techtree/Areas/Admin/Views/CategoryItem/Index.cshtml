@model IEnumerable<Techtree.Entities.CategoryItem>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a class="btn btn-outline-success" asp-action="Create" asp-route-categoryId="@ViewBag.CategoryId">
        <i class="fa fa-plus"></i> Add New Item
    </a>
</p>
<table class="table table-hover myTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateTimeItemReleased)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateTimeItemReleased)
                </td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a class="btn btn-sm btn-dark" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>

                    @if (item.ContentId == 0)
                    {
                        <a class="btn btn-sm btn-warning" asp-controller="Content" asp-action="Create" asp-route-categoryItemid="@item.Id"
                           asp-route-categoryId="@item.CategoryId">Add Content</a>
                    }
                    else
                    {
                        <a class="btn btn-sm btn-info" asp-controller="Content" asp-action="Edit" asp-route-categoryItemid="@item.Id"
                           asp-route-categoryId="@item.CategoryId">Edit Content</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
