@model Techtree.Entities.Category

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Category</h4>
    <hr />
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card text-center">
                <img src="@Model.ThumbnailImage" class="card-img" alt="...">
                <div class="card-header">
                    @Model.Title
                </div>
                <div class="card-body">
                    <h5 class="card-title">@Model.CategoryItems</h5>
                    <p class="card-text">@Model.Description</p>
                    <a asp-controller="Category" asp-action="Index" class="btn btn-primary">All Categories</a>
                </div>
                @*<div class="card-footer text-muted">
                        2 days ago
                    </div>*@
            </div>
        </div>
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
