@model Techtree.Models.RegistrationModel

<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <div id="alert_placeholder_register">
            </div>
            <form id="UserRegistrationForm" name="UserRegistrationForm" asp-controller="UserAuth" asp-action="RegisterUser">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="RegistrationInValid">
                <div class="form-group">
                    <label asp-for="Email" class="font-weight-bold"></label>
                    <input asp-for="Email" placeholder="Email Address" class="form-control">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="font-weight-bold"></label>
                    <input asp-for="Password" placeholder="Password" class="form-control">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword" class="font-weight-bold"></label>
                    <input asp-for="ConfirmPassword" placeholder="Confirm Password" class="form-control">
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FirstName" class="font-weight-bold"></label>
                    <input asp-for="FirstName" placeholder="First Name" class="form-control">
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LastName" class="font-weight-bold"></label>
                    <input asp-for="LastName" placeholder="Last Name" class="form-control">
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address1" class="font-weight-bold"></label>
                    <input asp-for="Address1" placeholder="Address1" class="form-control">
                    <span asp-validation-for="Address1" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address2" class="font-weight-bold"></label>
                    <input asp-for="Address2" placeholder="Address2" class="form-control">
                    <span asp-validation-for="Address2" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PostCode" class="font-weight-bold"></label>
                    <input asp-for="PostCode" placeholder="Post Code" class="form-control">
                    <span asp-validation-for="PostCode" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PhoneNumber" class="font-weight-bold"></label>
                    <input asp-for="PhoneNumber" placeholder="Phone Number" class="form-control">
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="custom-control custom-switch">
                        <input asp-for="AcceptUserAgreement" class="custom-control-input" id="UserAgreement">
                        <label asp-for="AcceptUserAgreement" class="custom-control-label" for="UserAgreement"></label>
                    </div>
                </div>
                <input type="hidden" asp-for="CategoryId" />
            </form>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button id="register" name="register" type="button" class="btn btn-primary">Register</button>
        </div>
    </div>
</div>
